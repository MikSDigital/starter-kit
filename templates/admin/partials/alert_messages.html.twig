{% if app.request.attributes.get('_route') == '_manager_index' %}
    <div class="row">
        <div class="alert alert-block alert-info" style="text-align: center;">
            <button type="button" class="close" data-dismiss="alert">
                <i class="ace-icon fa fa-times"></i>
            </button>
            <h2><i class="ace-icon fa fa-check green"></i>
                Hello {{app.user.firstname}} {{app.user.lastname}}</h2>
            You've successfully logged into the Web Admin panel.<br>
            {% if is_granted('ROLE_NEW') %}
                To request country-level access please create a ticket in <a target="_blank" href="https://admiral.atlassian.net/servicedesk/customer/portal/6/create/141">Service Desk here</a>.
            {% endif %}
        </div>
    </div>
{% endif %}
